<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".activity.navigation.DestinationArriveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/extrabold"
            android:text="@string/arriveDestination"
            android:textAlignment="center"
            android:textColor="@color/skyblue"
            android:textSize="80sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:gravity="center_horizontal"
        android:src="@drawable/capstone_icon_skyblue" />

    <Button
        android:id="@+id/arriveDestToMainBT"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle_button_skyblue_navy"
        android:fontFamily="@font/bold"
        android:text="@string/toMain"
        android:textColor="@color/navy"
        android:textSize="70sp" />
</LinearLayout>