<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.setting.InquiryActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="80sp"
            android:fontFamily="@font/extrabold"
            android:textColor="@color/skyblue"
            android:textAlignment="center"
            android:text="@string/inquiry" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle_button_skyblue_navy"
        android:fontFamily="@font/bold"
        android:textColor="@color/navy"
        android:textSize="40sp"
        android:text="3218****@\n dankook.com" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle_button_skyblue_navy"
        android:fontFamily="@font/bold"
        android:textColor="@color/navy"
        android:textSize="40sp"
        android:text="Instagram:\n@blindnavi" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle_button_skyblue_navy"
        android:fontFamily="@font/bold"
        android:textColor="@color/navy"
        android:textSize="50sp"
        android:text="02)1234-5678" />

    <Button
        android:id="@+id/toMainBT"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/rectangle_button_skyblue_red"
        android:fontFamily="@font/bold"
        android:textColor="@color/red"
        android:textSize="70sp"
        android:text="@string/toMain" />

</LinearLayout>