<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ui.activity.BluetoothConnectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/extrabold"
            android:text="@string/btConnect"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textSize="50dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center_horizontal"
        android:src="@drawable/capstone_icon" />

    <Button
        android:id="@+id/searchBTDeviceBT"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_button_yellow_darkgreen"
        android:fontFamily="@font/bold"
        android:text="@string/searchBTDevice"
        android:textColor="@color/darkgreen"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btDeviceYesBT"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_button_yellow_navy"
        android:fontFamily="@font/bold"
        android:text="@string/yes"
        android:textColor="@color/navy"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btDeviceNoBT"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_button_yellow_red"
        android:fontFamily="@font/bold"
        android:text="@string/no"
        android:textColor="@color/red"
        android:textSize="40dp" />
</LinearLayout>